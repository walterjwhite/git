#!/bin/sh

. _LIBRARY_PATH/_APPLICATION_NAME/project.directory.sh
. _LIBRARY_PATH/install/logging.sh

if [ "$#" -lt "1" ]
then
    exitWithError "Identifier / since is required" 1
fi

# unchanged files since
_ALL=$(mktemp)
_CHANGED=$(mktemp)

_SAFE_PATH=$(echo $_PROJECT_PATH/ | sed -e "s/\//\\\\\//g")

find $_PROJECT_PATH -type f\
    | grep -v \\.git\
    | sed '/^[[:space:]]*$/d'\
    | sort -u\
    | sed -e "s/$_SAFE_PATH//g"\
    > $_ALL

gcf $@\
    | sed '/^[[:space:]]*$/d'\
    | sort -u\
    > $_CHANGED

comm -1 -3 $_CHANGED $_ALL

rm -f $_ALL $_CHANGED