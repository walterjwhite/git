#!/bin/sh

OSTYPE=$(uname)
if [ -z "$OSTYPE" ]
then
    echo "OSTYPE is empty"
    exit 1
fi

case $OSTYPE in
    "linux-gnu"*|"darwin"*|"cygwin"|"msys"|"FreeBSD")
        _SYSTEM=unix
    
        ;;
    "win32")
        _SYSTEM=windows

        ;;
    *)
        echo "ERROR - $OSTYPE"
        exit 1

        ;;
esac

cp $_SYSTEM/home/.git-hooks ~/

. ~/.git-hooks

# ensure all new projects have these hooks setup
cp hooks/* $_SYSTEM_HOOK_PATH